export TAU_MAKEFILE=/opt/sw/tau/x86_64/lib/Makefile.tau-mpi-pdt
cd ~/final-project

for i in {2..10}
do
	mpiexec -np $i --map-by ppr:1:node --hostfile $PBS_NODEFILE ./hiv.cx 21 2000
	pprof > pprof_numrank_$i.txt
	rm profile.*
done

